<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/background_light"
    tools:context="ithub.iinventory.MainActivity">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout" />

    <Button
        android:id="@+id/mainAddItem"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loggedUser"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colorPrimary"
        android:text="Add Item"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mainMakeBill"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainAddItem"
        android:layout_alignStart="@+id/mainAddItem"
        android:layout_below="@+id/mainAddItem"
        android:layout_marginTop="72dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/colorAccent"
        android:text="Make Bill"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mainAllItem"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainMakeBill"
        android:layout_alignStart="@+id/mainMakeBill"
        android:layout_below="@+id/mainMakeBill"
        android:layout_marginTop="84dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#f2ac1d"
        android:text="All Item List"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />


    <Button
        android:id="@+id/chatButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainAllItem"
        android:layout_alignStart="@+id/mainAllItem"
        android:layout_below="@+id/mainAllItem"
        android:layout_marginTop="74dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#9d9d9d"
        android:text="Chat"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/loggedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cardView3"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:text="Logged Name"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/mainAddItem"
        android:layout_alignRight="@+id/mainAddItem"
        android:layout_alignTop="@+id/cardView3"
        android:text="Logged User Name : "
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_above="@+id/mainAllItem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        app:cardBackgroundColor="#f45c5c"
        app:cardCornerRadius="20dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:contentPaddingBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="3400dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Last Sale - 8500/=  LKR"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_monetization_on_black_24dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/chatButton"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView"
        app:cardBackgroundColor="#45ade5"
        app:cardCornerRadius="20dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:contentPaddingBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="3400dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="All Sales - 13500/=  LKR"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_trending_up_black_24dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/cardView"
        android:layout_alignStart="@+id/cardView"
        android:layout_below="@+id/main_page_toolbar"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:contentPaddingBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img"
                android:layout_toRightOf="@+id/img"
                android:text="Date"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="CardImageViewDesc"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_date_range_black_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/chatButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/chatButton"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        app:srcCompat="@drawable/logomain" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/amita_bold"
        android:text="i"
        android:textColor="@android:color/holo_purple"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:fontFamily="@font/advent_pro"
        android:text="Inventory"
        android:textColor="@android:color/holo_purple"
        android:textSize="45sp" />

</RelativeLayout>
