<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ithub.iinventory.MainActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mainAddItem"
        android:layout_alignStart="@+id/mainAddItem"
        android:layout_below="@+id/main_page_toolbar"
        android:layout_marginTop="22dp"
        android:text="i Inventory Panel"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainAddItem"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="129dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Add Item"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/mainMakeBill"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainAddItem"
        android:layout_alignStart="@+id/mainAddItem"
        android:layout_below="@+id/mainAddItem"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Make Bill"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/mainAllItem"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainMakeBill"
        android:layout_alignStart="@+id/mainMakeBill"
        android:layout_below="@+id/mainMakeBill"
        android:layout_marginTop="80dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="All Item List"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:background="@drawable/buttonshape"/>


    <Button
        android:id="@+id/chatButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mainAllItem"
        android:layout_alignStart="@+id/mainAllItem"
        android:layout_alignTop="@+id/mainAllItem"
        android:layout_marginTop="141dp"
        android:backgroundTint="#9d9d9d"
        android:text="Chat"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp"
        android:background="@drawable/buttonshape"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainAddItem"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="131dp"
        android:layout_marginStart="131dp"
        android:layout_toEndOf="@+id/mainAddItem"
        android:layout_toRightOf="@+id/mainAddItem"
        android:text="Date"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/loggedUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateView"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:text="Logged Name"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loggedUser"
        android:layout_alignBottom="@+id/loggedUser"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="Logged User Name : "
        android:textSize="24sp" />


</RelativeLayout>
